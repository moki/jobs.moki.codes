{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/": ["src/*"],
      "lib/": ["lib/*"],
      "fonts/": ["font/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ]
}
